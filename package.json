{
	"name": "startuptheme",
	"version": "1.0.0",
	"description": "Modern WordPress starter theme with Vite, Tailwind CSS, and quality tooling",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite build --watch --mode development",
		"build": "vite build",
		"lint:js": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings=100 --rule 'max-lines:[1,{max:400,skipBlankLines:true,skipComments:true}]'",
		"lint:js:strict": "eslint src --ext .js,.jsx,.ts,.tsx --rule 'max-lines:[2,{max:500,skipBlankLines:true,skipComments:true}]' --max-warnings=0",
		"format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss}\""
	},
	"dependencies": {
		"@wordpress/block-editor": "^15.0.0",
		"@wordpress/blocks": "^15.0.0",
		"@wordpress/components": "^29.0.0",
		"@wordpress/i18n": "^5.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.0.0-beta.7",
		"@types/node": "^22.9.3",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"@types/wordpress__block-editor": "^11.5.15",
		"@types/wordpress__blocks": "^12.5.14",
		"@types/wordpress__components": "^23.0.11",
		"@typescript-eslint/eslint-plugin": "^8.14.0",
		"@typescript-eslint/parser": "^8.14.0",
		"@wordpress/eslint-plugin": "^21.3.0",
		"eslint": "^8.57.1",
		"prettier": "^3.3.3",
		"sass": "^1.80.7",
		"tailwindcss": "^4.0.0-beta.7",
		"typescript": "^5.6.3",
		"vite": "^6.0.1",
		"vite-plugin-static-copy": "^2.1.0"
	}
}
