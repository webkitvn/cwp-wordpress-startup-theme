<?xml version="1.0"?>
<ruleset name="StartupTheme">
	<description>WordPress Coding Standards for StartupTheme</description>

	<!-- Check all PHP files in the theme directory -->
	<file>.</file>

	<!-- Exclude paths -->
	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/assets/*</exclude-pattern>

	<!-- Use WordPress Coding Standards -->
	<rule ref="WordPress">
		<!-- Allow short array syntax -->
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
	</rule>

	<!-- Enforce WordPress text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="cwp"/>
			</property>
		</properties>
	</rule>

	<!-- Check for PHP 8.3 compatibility -->
	<config name="testVersion" value="8.3-"/>

	<!-- Show progress and colors -->
	<arg name="colors"/>
	<arg value="sp"/>
	<arg name="extensions" value="php"/>
</ruleset>
